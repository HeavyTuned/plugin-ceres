{% set title            = widget.settings.title.mobile %}
{% set icon             = widget.settings.icon.mobile %}
{% set listEntries      = widget.settings.entries.mobile %}
{% set renderContent    = false %}

{% for entry in listEntries if entry.text is not empty and entry.url is not empty %}
    {% set renderContent = true %}
{% endfor %}

{% if title is not empty %}
    {% set renderContent = true %}
{% endif %}

{% if renderContent %}
    <div class="widget widget-link-list">
        <div class="widget-inner">
            <nav>
                <h2 class="h5">{{ title }}</h2>
                {% if listEntries | length > 0 %}
                    <ul class="list-unstyled">
                        {% for entry in listEntries %}
                            <li>
                                {% if icon != "none" %}
                                    <i class="fa {{ icon }}" aria-hidden="true"></i>
                                {% endif %}
                                <a href="{{ entry.url }}">{{ entry.text }}</a>
                            </li>
                        {% endfor %}
                    </ul>    
                {% endif %}
            </nav>
        </div>
    </div>
{% endif %}
