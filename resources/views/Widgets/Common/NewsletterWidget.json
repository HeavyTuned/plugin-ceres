{
    "identifier": "Ceres::NewsletterWidget",
    "label": "Widget.newsletterLabel",
    "previewImageURL": "/images/widgets/newsletter.svg",
    "type": "default",
    "widgetClass": "Ceres\\Widgets\\Common\\NewsletterWidget",
    "settings": {
        "appearance": {
            "type": "select",
            "required": true,
            "defaultValue": "primary",
            "options": {
                "name": "Widget.widgetAppearanceLabel",
                "tooltipText": "Widget.widgetAppearanceTooltip",
                "listBoxValues": [
                    {
                        "value": "primary",
                        "caption": "Widget.widgetAppearancePrimary",
                        "position": 0
                    },
                    {
                        "value": "secondary",
                        "caption": "Widget.widgetAppearanceSecondary",
                        "position": 1
                    },
                    {
                        "value": "success",
                        "caption": "Widget.widgetAppearanceSuccess",
                        "position": 2
                    },
                    {
                        "value": "info",
                        "caption": "Widget.widgetAppearanceInfo",
                        "position": 3
                    },
                    {
                        "value": "warning",
                        "caption": "Widget.widgetAppearanceWarning",
                        "position": 4
                    },
                    {
                        "value": "danger",
                        "caption": "Widget.widgetAppearanceDanger",
                        "position": 5
                    }
                ]
            }
        },
        "title": {
            "type": "text",
            "required": false,
            "defaultValue": "",
            "options": {
                "name": "Widget.newsletterTitleLabel",
                "tooltipText": "Widget.newsletterTitleBarTextTooltip"
            }
        },
        "subTitle": {
            "type": "text",
            "required": false,
            "defaultValue": "",
            "options": {
                "name": "Widget.newsletterDescriptionLabel",
                "tooltipText": "Widget.newsletterSubTitleBarTextTooltip"
            }
        },
        "showNameInputs": {
            "type": "checkbox",
            "required": true,
            "defaultValue": false,
            "options": {
                "name": "Widget.newsletterShowNameInputsLabel"
            }
        },
        "showPrivacyPolicyCheckbox": {
            "type": "checkbox",
            "required": true,
            "defaultValue": true,
            "options": {
                "name": "Widget.newsletterShowPrivacyPolicyCheckboxLabel"
            }
        },
        "emailFolder": {
            "type": "number",
            "required": true,
            "defaultValue": "",
            "options": {
                "name": "Widget.newsletterEmailFolderLabel",
                "tooltipText": "Widget.newsletterEmailFolderTooltip"
            }
        }
    }
}